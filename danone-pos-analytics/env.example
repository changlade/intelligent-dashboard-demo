# Environment Variables Template for Intelligent Dashboard Demo App
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ============================================================================
# üìä DATABRICKS DASHBOARD CONFIGURATION
# ============================================================================

# Your Databricks workspace URL (e.g., https://xxx.cloud.databricks.com)
DATABRICKS_INSTANCE_URL=https://your-workspace.cloud.databricks.com

# Your Databricks workspace ID (found in workspace URL or settings)
DATABRICKS_WORKSPACE_ID=your_workspace_id_here

# Your Lakeview Dashboard ID (found in dashboard URL: /dashboardsv3/{ID})
DATABRICKS_DASHBOARD_ID=your_dashboard_id_here

# Your Databricks Personal Access Token (User Settings ‚Üí Access Tokens)
# CRITICAL: Keep this secret! Never commit to git!
DATABRICKS_DASHBOARD_TOKEN=dapi_your_token_here

# ============================================================================
# ü§ñ DATABRICKS GENIE AI CONFIGURATION
# ============================================================================

# Your Databricks workspace URL (usually same as above)
DATABRICKS_GENIE_INSTANCE_URL=https://your-workspace.cloud.databricks.com

# Your Genie Space ID (found in Genie URL: /genie/rooms/{ID})
DATABRICKS_GENIE_SPACE_ID=your_genie_space_id_here

# Your Databricks Personal Access Token (can use same as dashboard token)
DATABRICKS_GENIE_TOKEN=dapi_your_token_here

# ============================================================================
# üíæ DATABASE CONFIGURATION (Optional - only if using PostgreSQL)
# ============================================================================

# Database host
DB_HOST=your_database_host.database.cloud.databricks.com

# Database port (default: 5432)
DB_PORT=5432

# Database name
DB_NAME=your_database_name

# Database user
DB_USER=your_database_user

# Database password
DB_PASSWORD=your_database_password

# ============================================================================
# ‚öôÔ∏è APPLICATION CONFIGURATION (Optional)
# ============================================================================

# Environment (development, production)
ENV=development

# Enable debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database schema
DB_SCHEMA=public
